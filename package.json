{
  "name": "codebase-chat",
  "displayName": "Codebase Chat",
  "description": "Chat with your codebase using local LLM models",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codebase-chat.startChat",
        "title": "Start Codebase Chat"
      }
    ],
    "configuration": {
      "title": "Codebase Chat",
      "properties": {
        "codebase-chat.modelEndpoint": {
          "type": "string",
          "default": "http://host.docker.internal:1234/v1/chat/completions",
          "description": "Endpoint for the local LLM model (use host.docker.internal to access host machine from Docker)"
        },
        "codebase-chat.modelName": {
          "type": "string",
          "default": "codeqwen1.5-7b-chat",
          "description": "Name of the LLM model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "glob": "^7.2.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
